@model IEnumerable<Campus.School.Management.Logic.BusinessLayer.ViewModel.BusCostViewModel>
@using Campus.School.Management.Logic.Resources
<table class="ui selectable  single line Striped celled  compact table" id="myTable">
    <thead>
        <tr class="">

            @*<th>
                @Html.DisplayNameFor(model => model.BusID)
            </th>*@
            <th>
                @GeneralResource.Actions
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BusNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SingleTripCost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DoubleTripCost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Station)
            </th>
           
        </tr>
    </thead>
    @foreach (var item in Model)
    {
    <tr>
        @*<td>
            @Html.DisplayFor(modelItem => item.BusID)
        </td>*@
        <td>
            <a href="#" onclick="Edit(@item.ID);"> <i class="feather icon-edit-1"></i></a>


            <a href="#" onclick="Delete(@item.ID);"> <i class="feather red icon-delete"></i></a>

        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BusNo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SingleTripCost)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DoubleTripCost)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Station)
        </td>

    </tr>
    }

</table>

<script>
    $(document).ready(function () {
        function InitIndex()
        {
            $('#myTable').DataTable();
            var Msg = '@TempData["Msg"]';
            if (Msg == 1)
            {
                toastr.success("@GeneralResource.toastrSave")
            }
            else if (Msg == 2)
            {
                toastr.success("@GeneralResource.toastrEdit")
            }
            else if (Msg == 3)
            {
                toastr.success("@GeneralResource.toastrDelete")
            }
            else if (Msg == 4) {
                toastr.error("@GeneralResource.toastrOperationFaild")
            }

        };
        InitIndex();
    });
</script>