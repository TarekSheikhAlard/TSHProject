@model Campus.School.Management.Logic.BusinessLayer.ViewModel.EmployeeAssetsViewModel
@using Campus.School.Management.Logic.Resources
<script src="~/Content/Scripts/jquery.validate.min.js"></script>
<script src="~/Content/Scripts/jquery.validate.unobtrusive.min.js"></script>

@using (Ajax.BeginForm("Create", "EmployeeAssets", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "list-EmployeeAssets" }, new { @class = "ui small EmployeeAssets form" }))

{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(model => model.Employee_ID)

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })



    <div class="field">
        @Html.LabelFor(model => model.AssetName, htmlAttributes: new { @class = "" })
        <div class="ui input">
            @Html.EditorFor(model => model.AssetName, new { htmlAttributes = new { @class = "" } })
            @Html.HiddenFor(model => model.AssetId)
            @Html.ValidationMessageFor(model => model.AssetName, "", new { @class = "text-danger" })
        </div>
    </div>

}


