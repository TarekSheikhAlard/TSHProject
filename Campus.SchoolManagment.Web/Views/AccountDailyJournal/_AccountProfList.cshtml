
@model IEnumerable<Campus.School.Management.Logic.BusinessLayer.ViewModel.AccountProfViewModel>
@using Campus.School.Management.Logic.Resources






    <table class="ui selectable  single line Striped celled  compact table" id="myTable">
        <thead>
            <tr class="">
                <th>
                    @Html.DisplayNameFor(model => model.AccountName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Credit)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Debit)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Balance)
                </th>

        </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AccountName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Credit)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Debit)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Balance)
                </td>
            </tr>

        }
        <tfoot>
            <tr>
                <td>
                    @GeneralResource.Total
                </td>
                <td>
                    @Model.Sum(x => x.Credit)
                </td>
                <td>
                    @Model.Sum(x => x.Debit)
                </td>
                <td>
                    @Model.Sum(x => x.Balance)
                </td>
            </tr>
        </tfoot>


    </table>


    <script>
        $(document).ready(function () {
            function InitIndex() {
                $('#myTable').DataTable();

            };
            InitIndex();
        });
    </script>
