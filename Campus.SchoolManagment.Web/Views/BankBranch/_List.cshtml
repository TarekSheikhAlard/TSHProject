            <td>
                @Html.DisplayFor(modelItem => item.BranchPhone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BranchMobile)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BranchFax)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AccountNameAR)
            </td>

        </tr>
        }

</table>
<script>
    $(document).ready(function () {
        function InitIndex()
        {
            $('#myTable').DataTable();
            var Msg = '@TempData["Msg"]';
            if (Msg == 1)
            {
                toastr.success("@GeneralResource.toastrSave")
            }
            else if (Msg == 2)
            {
                toastr.success("@GeneralResource.toastrEdit")
            }
            else if (Msg == 3)
            {
                toastr.success("@GeneralResource.toastrDelete")
            }
            else if (Msg == 4) {
                toastr.error("@GeneralResource.toastrOperationFaild")
            }

        };
        InitIndex();
    });
</script>