@model IEnumerable<Campus.School.Management.Logic.BusinessLayer.ViewModel.UnitsMeasurementsViewModel>
@using Campus.School.Management.Logic.Resources

<table class="ui selectable  single line Striped celled  compact table" id="UnitsTable">
    <thead>
        <tr>
            <th>@GeneralResource.Actions</th>
            <th>
                @Html.DisplayNameFor(model => model.UnitNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UnitNameEn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UnitNameAr)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SymbolEn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SymbolAr)
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a href="#" onclick="Edit(@item.Id);"> <i class="feather icon-edit-1"></i></a>
                    <a href="#" onclick="Delete(@item.Id);"> <i class="feather red icon-trash"></i></a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UnitNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UnitNameEn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UnitNameAr)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SymbolEn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SymbolAr)
                </td>

            </tr>

        }
    </tbody>
    </table>

<script>
    $(document).ready(function () {
        function InitIndex()
        {
            $('#UnitsTable').DataTable();

            var Msg = '@TempData["Msg"]';

            if (Msg == 1)
            {
                toastr.success("@GeneralResource.toastrSave")
            }
            else if (Msg == 2)
            {
                toastr.success("@GeneralResource.toastrEdit")
            }
            else if (Msg == 3)
            {
                toastr.success("@GeneralResource.toastrDelete")
            }
            else if (Msg == 4) {
                toastr.error("@GeneralResource.toastrOperationFaild")
            }

        };
        InitIndex();
    });
</script>
