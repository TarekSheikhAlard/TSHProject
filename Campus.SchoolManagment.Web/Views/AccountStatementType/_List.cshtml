@model IEnumerable<Campus.School.Management.Logic.BusinessLayer.ViewModel.AccountStatementTypeViewModel>

@using Campus.School.Management.Logic.Resources

<table class="ui selectable  single line Striped celled  compact table" id="myTable">
    <thead>
        <tr class="">
            <th>
                @Html.DisplayNameFor(model => model.StatementypeName)
            </th>



            <th>@GeneralResource.Edit</th>
            <th>@GeneralResource.Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
            {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.StatementypeName)
                </td>



                <td>
                    <a href="#" onclick="Edit(@item.StatementTypeID);" class="editDialog"> <i class="ui edit icon"></i></a>

                </td>

                <td>
                    <a href="#" onclick="Delete(@item.StatementTypeID);" class="editDialog"> <i class="ui delete red icon"></i></a>


                </td>

            </tr>
        }
    </tbody>
</table>

<script>
    $(document).ready(function () {
        function InitIndex()
        {
            $('#myTable').DataTable();
            var Msg = '@TempData["Msg"]';
            if (Msg == 1)
            {
                toastr.success("@GeneralResource.toastrSave")
            }
            else if (Msg == 2)
            {
                toastr.success("@GeneralResource.toastrEdit")
            }
            else if (Msg == 3)
            {
                toastr.success("@GeneralResource.toastrDelete")
            }
            else if (Msg == 4) {
                toastr.error("@GeneralResource.toastrOperationFaild")
            }

        };
        InitIndex();
    });
</script>
