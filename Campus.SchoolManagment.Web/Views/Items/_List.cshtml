                @Html.DisplayNameFor(model => model.unitPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.wholeSalePrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.storeNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.storeName)
            </th>

        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
        <tr>
            <td>
                <a href="#" onclick="Edit(@item.ItemId);" class="editDialog"> <i class="feather icon-edit-1"></i></a>
                <a href="#" onclick="Delete(@item.ItemId);" class="editDialog"> <i class="feather red icon-delete"></i></a>
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.ItemNumber)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Supplier)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlaceofManufacture)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.material)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nameEn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nameAr)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ItemModel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.maximumLimit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.minimumLimit)
            </td>
