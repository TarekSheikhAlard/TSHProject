@model IEnumerable<Campus.School.Management.Logic.BusinessLayer.ViewModel.MaterialManufactureViewModel>

@using Campus.School.Management.Logic.Resources

<table class="ui selectable  single line Striped celled  compact table" id="MaterialTable">
    <thead>
        <tr>
            <th>
                @GeneralResource.Actions
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaterialNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaterialNameEn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaterialNameAr)
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a href="#" onclick="Edit(@item.Id);"> <i class="feather icon-edit-1"></i></a>
                    <a href="#" onclick="Delete(@item.Id);"> <i class="feather red icon-trash"></i></a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MaterialNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MaterialNameEn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MaterialNameAr)
                </td>

            </tr>
        }
    </tbody>

    </table>
<script>
    $(document).ready(function () {
        function InitIndex()
        {
            $('#MaterialTable').DataTable();

            var Msg = '@TempData["Msg"]';

            if (Msg == 1)
            {
                toastr.success("@GeneralResource.toastrSave")
            }
            else if (Msg == 2)
            {
                toastr.success("@GeneralResource.toastrEdit")
            }
            else if (Msg == 3)
            {
                toastr.success("@GeneralResource.toastrDelete")
            }
            else if (Msg == 4) {
                toastr.error("@GeneralResource.toastrOperationFaild")
            }

        };
        InitIndex();
    });
</script>