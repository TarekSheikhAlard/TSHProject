@model Campus.School.Management.Logic.BusinessLayer.ViewModel.SupplierFormViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ViewQuotation</title>

    <link href="@Server.MapPath("~/Content/Css/pdf.css")" rel="stylesheet" />
    @*<link href="~/Content/Css/pdf.css" rel="stylesheet" />*@
    <link href="~/Content/Css/semantic.min.css" rel="stylesheet" />
    <script src="~/Content/Scripts/jquery-1.12.4.min.js"></script>
    <style>
        body {
            overflow-y: scroll;
            overflow-x: hidden;
            margin: 2em 3em;
        }
    </style>
    <script src="~/Scripts/DevelopmentJS/AccountSupplier.js"></script>
</head>
<body>
    @{
        var supplier = Model.SupplierName;
        var address = Model.Address;
        var type = Model.Type;

    }

    <div>
        <div>

            <h2 class="ui header">@supplier</h2>
            <h3 class="ui  header">
                <b>Address</b>

            </h3>
            <span>@address</span>

        </div>

        <div>



            <table class="ui celled blue compact table" style="width:30%;float: right;margin-bottom: 2em;">
                <thead>
                    <tr>
                        <th colspan="3">Quotation Details</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td><b> date :</b> </td>
                        <td>@Html.DisplayFor(model => model.CreatedDate)</td>
                    </tr>
                    <tr>
                        <td><b>Quate No:</b></td>
                        <td>@Html.DisplayFor(model => model.ID)</td>
                    </tr>
                    <tr>
                        <td><b>Expiration Date:</b></td>
                        <td>@Html.DisplayFor(model => model.Validity)</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <table class="ui celled blue compact table">
        <thead>
            <tr>

                <th>
                    @Html.DisplayNameFor(model => model.ItemsList.Single().itemName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ItemsList.Single().Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ItemsList.Single().UnitPrice)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ItemsList.Single().Qty)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.ItemsList.Single().Amount)
                </th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ItemsList)
            {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.itemName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UnitPrice)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Qty)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Amount)
                    </td>



                </tr>
            }
        </tbody>
        <tr>
            <td colspan="3"></td>
            <td><b>Grand Total</b> </td>
            <td><b>52000</b></td>
        </tr>

    </table>


        <button class="ui right floated primary button" onclick="SendPO(this)" data-id="@Model.ID"> Send PO</button>



</body>
</html>
