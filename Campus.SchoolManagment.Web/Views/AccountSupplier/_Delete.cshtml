

@using Campus.School.Management.Logic.Resources


@model int

@using (Ajax.BeginForm("Delete", "AccountSupplier", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "div-record", OnSuccess = "$('.close').click()" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">


        @Html.ValidationSummary(true, "", new { @class = "text-danger" })



        <div class="form-group  delete_msg">

            @Html.Label("Note", @GeneralResource.DeleteMessageConfirm, htmlAttributes: new { @class = "control-label col-md-10 " })

        </div>



        <div class="actions">
            <button type="submit" class="ui submit primary button" name="cmd">@GeneralResource.ok</button>
            <button type="button" class="ui deny button" >@GeneralResource.Close</button>

        </div>
    </div>
}

@section Scripts {


    @Scripts.Render("~/bundles/jqueryval")


}

