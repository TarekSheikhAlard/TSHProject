@model IEnumerable<Campus.School.Management.Logic.BusinessLayer.ViewModel.SupplierViewModel>
@using Campus.School.Management.Logic.Resources
@{
    ViewBag.Title = "_List";
}

 
<table class="ui selectable  single line Striped celled  compact table" id="myTable">
    <thead>
        <tr class="">
            <th>
                @GeneralResource.Actions
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SupplierName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SupplierNameAr)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mobile)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Website)
            </th>
         
            <th>
                @Html.DisplayNameFor(model => model.AccountTree)
            </th>
         
            
        </tr>
        </thead>

        @foreach (var item in Model)
        {
    <tr>
        <td>
            <a href="#" onclick="Edit(@item.ID);"><i class="feather icon-edit-1"> </i></a>

            <a href="#" onclick="Delete(@item.ID);"><i class="feather red icon-delete "> </i></a>

        </td>
        <td>
            @Html.ActionLink(item.SupplierName, "Supplier", "AccountSupplier", new { id = item.ID}, null)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SupplierNameAr)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Phone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Mobile)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Website)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.AccountTree)
        </td>


    </tr>
        }

</table>
<script>
    $(document).ready(function () {
        function InitIndex()
        {
            $('#myTable').DataTable();
            var Msg = '@TempData["Msg"]';
            if (Msg == 1)
            {
                toastr.success("@GeneralResource.toastrSave")
            }
            else if (Msg == 2)
            {
                toastr.success("@GeneralResource.toastrEdit")
            }
            else if (Msg == 3)
            {
                toastr.success("@GeneralResource.toastrDelete")
            }
            else if (Msg == 4) {
                toastr.error("@GeneralResource.toastrOperationFaild")
            }

        };
        InitIndex();
    });
</script>