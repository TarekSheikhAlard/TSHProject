@model IEnumerable<Campus.School.Management.Logic.BusinessLayer.ViewModel.AccountFirstBalanceViewModel>
@using Campus.School.Management.Logic.Resources

<table class="ui selectable  single line Striped celled  compact table" id="myTable">
    <thead>
        <tr class="">
            <th>
                @GeneralResource.Actions
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.CostCenterID)
                </th>*@
            <th>
                @Html.DisplayNameFor(model => model.costcenterName)
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.AccountTreeID)
                </th>*@
            <th>
                @Html.DisplayNameFor(model => model.AccountNameEN)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ActionType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OperationDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.PhysicalYearID)
                </th>*@
            @*<th>@GeneralResource.Edit</th>
            <th>@GeneralResource.Delete</th>*@
        </tr>
    </thead>

        @foreach (var item in Model)
        {
    <tr>
        <td>
            <a href="#" onclick="Edit(@item.ID);"> <i class="ui edit icon"></i></a>
            <a href="#" onclick="Delete(@item.ID);"> <i class="ui delete red icon"></i></a>
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.CostCenterID)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.costcenterName)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.AccountTreeID)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.AccountNameEN)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ActionType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OperationDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Amount)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.PhysicalYearID)
        </td>*@


    </tr>
        }

</table>
<script>
    $(document).ready(function () {
        function InitIndex()
        {
            $('#myTable').DataTable();
            var Msg = '@TempData["Msg"]';
            if (Msg == 1)
            {
                toastr.success("@GeneralResource.toastrSave")
            }
            else if (Msg == 2)
            {
                toastr.success("@GeneralResource.toastrEdit")
            }
            else if (Msg == 3)
            {
                toastr.success("@GeneralResource.toastrDelete")
            }
            else if (Msg == 4) {
                toastr.error("@GeneralResource.toastrOperationFaild")
            }

        };
        InitIndex();
    });
</script>