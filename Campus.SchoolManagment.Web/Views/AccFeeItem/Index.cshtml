@model IEnumerable<Campus.School.Management.Logic.BusinessLayer.ViewModel.AccFeeItemViewModel>
@using Campus.School.Management.Logic.Resources
@{
    ViewBag.Title = "Index"; if (!Request.IsAjaxRequest()) { Layout = "~/Views/Shared/_Layout.cshtml"; }
}

<div class="ui masthead vertical segment primary">
    <div class="ui container">
        <div class="introduction">
            <h1 class="ui header normal ">
                <clr-icon shape="certificate" size="45"></clr-icon>
                @*<i class="feather  icon-map"></i>*@
                <div id="heading" class="content">
                    @GeneralResource.AccountFeeTypes
                </div>
                <div id="Sub" class="sub header">
                    @String.Format(GeneralResource.DescriptionAddRemove, @GeneralResource.AccountFeeTypes)
                </div>
            </h1>
        </div>
    </div>
</div>


<div class="ui main container">

    <div class="ui  segment anim">
        <div class="toolspace">

            <a href="#" id="Add" class="ui labeled icon primary  button">
                <i class="plus icon"></i>
                @GeneralResource.CreateNew
            </a>
        </div>
        <div class="ui container">
            <div id="div-record">
                @Html.Partial("_List", Model)
            </div>
        </div>

    </div>
</div>


@{ string New = GeneralResource.New + " " + GeneralResource.AccountFeeTypes;
    string Update = GeneralResource.Update + " " + GeneralResource.AccountFeeTypes;
    string Delete = GeneralResource.Delete + " " + GeneralResource.AccountFeeTypes;
}

<div class="ui add small modal " id="Add-Model">
    <i class=" close feather icon-x "></i>
    <div class="header">
        @New
    </div>
    <div id="divForAdd" class="divForAdd scrolling content">
    </div>
</div>

<div class="ui delete modal " id="Delete-Model">
    <i class=" close feather icon-x "></i>
    <div class="header">
        @Delete
    </div>
    <div id="divForDelete" class="divForDelete content">
    </div>
</div>

<script src="~/Scripts/DevelopmentJS/AccFeeItem.js"></script>