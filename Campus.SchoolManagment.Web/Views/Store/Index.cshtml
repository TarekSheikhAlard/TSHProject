@model IEnumerable<Campus.School.Management.Logic.BusinessLayer.ViewModel.StoreViewModel>
@using Campus.School.Management.Logic.Resources
@{
    ViewBag.Title = "Index"; if (!Request.IsAjaxRequest()) { Layout = "~/Views/Shared/_Layout.cshtml"; }
}

@*<script src="~/Content/Scripts/jquery-1.10.2.min.js"></script>*@
@*<script src="~/Content/Scripts/jquery.unobtrusive-ajax.min.js"></script>*@


<div class="ui masthead vertical segment primary">
    <div class="ui container">
        <div class="introduction">
            <h1 class="ui header normal ">
                <clr-icon shape="warehouse" size="45"></clr-icon>
                @*<i class="feather  icon-map"></i>*@
                <div id="heading" class="content">
                    @GeneralResource.Store
                </div>
                <div id="Sub" class="sub header">
                    @String.Format(GeneralResource.DescriptionAddRemove, @GeneralResource.Store)
                </div>
            </h1>
        </div>
    </div>
</div>


<div class="ui main container">

    @*<a href="#" id="Add" class="btn green"><i class="glyphicon glyphicon-plus"></i>@GeneralResource.CreateNew</a>*@

    <div class="ui  segment anim">
        <div class="toolspace">

            <a href="#" id="Add" class="ui labeled icon primary  button">
                <i class="plus icon"></i>
                @GeneralResource.CreateNew
            </a>
        </div>

        <div class="ui container">
            <div id="div-record">
                @Html.Partial("_List", Model)
            </div>
        </div>

    </div>
</div>


@{ string New = GeneralResource.New + " " + GeneralResource.Store;
    string Update = GeneralResource.Update + " " + GeneralResource.Store;
    string Delete = GeneralResource.Delete + " " + GeneralResource.Store;
}




<div class="ui add  modal " id="Add-Model">
    <i class=" close feather icon-x "></i>
    <div class="header">
        @New
    </div>
    <div id="divForAdd" class="divForAdd scrolling content">
    </div>
</div>
<div class="ui edit modal " id="Edit-Model">
    <i class=" close feather icon-x "></i>
    <div class="header">
        @Update
    </div>
    <div id="divForUpdate" class="divForUpdate scrolling content">
    </div>
</div>
<div class="ui delete modal " id="Delete-Model">
    <i class=" close feather icon-x "></i>
    <div class="header">
        @Delete
    </div>
    <div id="divForDelete" class="divForDelete content">
    </div>
</div>

<div class="ui small inventory modal " id="Inventory-Model">
    <i class=" close feather icon-x "></i>
    <div class="header">
      @GeneralResource.InventoryTree
    </div>
    <div id="divForInventory" class="divForInventory content">
    </div>
</div>
<div class="ui small account modal " id="Account-Model">
    <i class=" close feather icon-x "></i>
    <div class="header">
        @GeneralResource.AccountTree
    </div>
    <div id="divForaccount" class="divForaccount content">
    </div>
</div>
<script src="~/Scripts/DevelopmentJS/store.js"></script>
