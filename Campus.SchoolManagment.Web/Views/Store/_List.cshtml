@model IEnumerable<Campus.School.Management.Logic.BusinessLayer.ViewModel.StoreViewModel>
@using Campus.School.Management.Logic.Resources
<table class="ui selectable  single line Striped celled  compact table" id="storeTable">
    <thead>
        <tr>
            <th>
                @GeneralResource.Actions
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StoreNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NameEn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NameAr)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PricingType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FundAccount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StoreAccount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CostAccount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SalesAccount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CostCenter1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CostCenter2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BankName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BankAccountNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Size)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Manager)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.tel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mobile)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OperationDate)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a href="#" onclick="Edit(@item.storeId);"> <i class="feather icon-edit-1"></i></a>
                    <a href="#" onclick="Delete(@item.storeId);"> <i class="feather red icon-trash"></i></a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StoreNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NameEn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NameAr)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PricingType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FundAccount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StoreAccount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CostAccount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SalesAccount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CostCenter1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CostCenter2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BankName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BankAccountNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Size)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Manager)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.tel)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Mobile)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Location)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OperationDate)
                </td>

            </tr>

        }
    </tbody>

    </table>
<script>
    $(document).ready(function () {
        function InitIndex()
        {
            $('#storeTable').DataTable();

            var Msg = '@TempData["Msg"]';

            if (Msg == 1)
            {
                toastr.success("@GeneralResource.toastrSave")
            }
            else if (Msg == 2)
            {
                toastr.success("@GeneralResource.toastrEdit")
            }
            else if (Msg == 3)
            {
                toastr.success("@GeneralResource.toastrDelete")
            }
            else if (Msg == 4) {
                toastr.error("@GeneralResource.toastrOperationFaild")
            }

        };
        InitIndex();
    });
</script>
