@model IEnumerable<Campus.School.Management.Logic.BusinessLayer.ViewModel.AccountCostCenterViewModel>
@using Campus.School.Management.Logic.Resources


<table class="ui selectable  single line Striped celled  compact table" id="myTable">
    <thead>
        <tr class="">
            <th>
                @GeneralResource.Actions
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CostCenterEn)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.CostCenterAR)
            </th>


            <th>
                @Html.DisplayNameFor(model => model.Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comment)
            </th>
            @*<th>@GeneralResource.Edit</th>
            <th>@GeneralResource.Delete</th>*@
        </tr>
    </thead>
    @foreach (var item in Model)
    {
    <tr>

        <td>
            <a href="#" onclick="Edit(@item.ID);"> <i class="ui edit icon"></i></a>
            <a href="#" onclick="Delete(@item.ID);"> <i class="ui delete red icon"></i></a>
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.CostCenterEn)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.CostCenterAR)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Code)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Comment)
        </td>




        @*<a href='@Url.Action("Delete", "AccountEmployeeSalaryItem", new { id = item.ID})'><span class="glyphicon glyphicon-remove"> </span> </a>*@
        @*@Ajax.ActionLink(" ", "Delete", "AccountEmployeeSalaryItem", new { @id = item.ID }, new AjaxOptions { HttpMethod = "GET", UpdateTargetId = "div-record", Confirm = "are you sure delete", LoadingElementId = "im", LoadingElementDuration = 1000  }, new { @class = "glyphicon glyphicon-remove" })*@



    </tr>
    }

</table>

<script>
    $(document).ready(function () {
        function InitIndex()
        {
            $('#myTable').DataTable();
            var Msg = '@TempData["Msg"]';
            if (Msg == 1)
            {
                toastr.success("@GeneralResource.toastrSave")
            }
            else if (Msg == 2)
            {
                toastr.success("@GeneralResource.toastrEdit")
            }
            else if (Msg == 3)
            {
                toastr.success("@GeneralResource.toastrDelete")
            }
            else if (Msg == 4) {
                toastr.error("@GeneralResource.toastrOperationFaild")
            }

        };
        InitIndex();
    });
</script>