@model Campus.School.Management.Logic.BusinessLayer.ViewModel.AspNetRolesViewModel
@using Campus.School.Management.Logic.Resources


<script src="~/Content/Scripts/jquery.validate.min.js"></script>
<script src="~/Content/Scripts/jquery.validate.unobtrusive.min.js"></script>

@using (Ajax.BeginForm("CreateRoles", "UserManagement", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "div-record", OnSuccess = "$('.close').click()" }, new { @class = "ui create roles form" }))

{
    @Html.AntiForgeryToken()


    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

<div class="field">
    @Html.LabelFor(model => model.RoleName, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="ui input">
        @Html.EditorFor(model => model.RoleName, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.RoleName, "", new { @class = "text-danger" })
    </div>
    </div>
        <div class="field">
            @Html.LabelFor(model => model.schoolId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.ListBoxFor(model => model.schoolId, ViewBag.schoolId as SelectList, "select")
                @Html.ValidationMessageFor(model => model.schoolId, "", new { @class = "text-danger" })
            </div>
        </div>


   
    <div class="actions">
        <button type="submit" class="ui primary button ">@GeneralResource.Save</button>
    </div>


}

