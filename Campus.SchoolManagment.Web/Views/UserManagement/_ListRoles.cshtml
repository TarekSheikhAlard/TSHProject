@model IEnumerable<Campus.School.Management.Logic.BusinessLayer.ViewModel.AspNetRolesViewModel>

@using Campus.School.Management.Logic.Resources
<table class="ui selectable  single line Striped celled  compact table" id="RolesTable">
   
    <thead>
    <tr>
        <th>@GeneralResource.Actions</th>
        <th>
            @Html.DisplayNameFor(model => model.RoleName)
        </th>

    </tr>
</thead>
    <tbody>
        @foreach (var item in Model)
        {

            <tr>

                <td>
                   
                    <a href="#" onclick="Edit('@item.ID');" class="editDialog"> <i class="feather icon-edit-1"></i></a>
                    <a href="#" onclick="Delete('@item.ID');" class="editDialog"> <i class="feather red icon-trash"></i></a>
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.RoleName)
                </td>

            </tr>
        }
    </tbody>
</table>


<script>
    $(document).ready(function () {
        function InitIndex()
        {
            $('#RolesTable').DataTable();

          

            var Msg = '@TempData["Msg"]';
            if (Msg == 1)
            {
                toastr.success("@GeneralResource.toastrSave")
            }
            else if (Msg == 2)
            {
                toastr.success("@GeneralResource.toastrEdit")
            }
            else if (Msg == 3)
            {
                toastr.success("@GeneralResource.toastrDelete")
            }
            else if (Msg == 4) {
                toastr.error("@GeneralResource.toastrOperationFaild")
            }
            else if (Msg == 5) {
                toastr.error("@GeneralResource.toastrEmailExist")
            }
        };


   InitIndex();

    });
</script>
