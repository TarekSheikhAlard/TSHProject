@model IEnumerable<Campus.School.Management.Logic.BusinessLayer.ViewModel.BusStudentOccupationViewModel>

@using Campus.School.Management.Logic.Resources

<table class="ui selectable  single line Striped celled  compact table" id="myTable">
    <thead>
        <tr class="">
            <th>
                @GeneralResource.Actions
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.StudentAcdID)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.StudentName)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.BusID)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.BusNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MorningTrip)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EviningTrip)
            </th>
          
        </tr>
    </thead>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            <a href="#" onclick="Edit(@item.ID);"> <i class="feather icon-edit-1"></i></a>

            <a href="#" onclick="Delete(@item.ID);"> <i class="feather red icon-delete"></i></a>

        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.StudentAcdID)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.StudentName)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.BusID)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.BusNo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MorningTrip)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EviningTrip)
        </td>

    </tr>
    }

</table>

<script>
    $(document).ready(function () {
        function InitIndex()
        {
            $('#myTable').DataTable();
            var Msg = '@TempData["Msg"]';
            if (Msg == 1)
            {
                toastr.success("@GeneralResource.toastrSave")
            }
            else if (Msg == 2)
            {
                toastr.success("@GeneralResource.toastrEdit")
            }
            else if (Msg == 3)
            {
                toastr.success("@GeneralResource.toastrDelete")
            }
            else if (Msg == 4) {
                toastr.error("@GeneralResource.toastrOperationFaild")
            }

        };
        InitIndex();
    });
</script>