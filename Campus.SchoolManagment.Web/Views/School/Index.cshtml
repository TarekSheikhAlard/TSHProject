@using Campus.School.Management.Logic.Resources

@model IEnumerable<Campus.School.Management.Logic.BusinessLayer.ViewModel.SchoolViewModel>

@{
    ViewBag.Title = "Index"; if (!Request.IsAjaxRequest()) { Layout = "~/Views/Shared/_Layout.cshtml"; }
}
@{
    bool super = false;

    if (User.IsInRole("SuperAdmin"))
    { super = true; }
}

@*<script src="~/Content/Scripts/jquery-1.10.2.min.js"></script>*@
@*<script src="~/Content/Scripts/jquery.unobtrusive-ajax.min.js"></script>*@

<div class="ui masthead vertical segment primary">
    <div class="ui container">
        <div class="introduction">

            <h1 class="ui header normal ">
                <clr-icon shape="book" size="45"></clr-icon>
                @*<i class="feather big icon-book" ></i>*@
                <div id="heading" class="content">
                    @GeneralResource.School
                </div>
                <div id="Sub" class="sub header">
                    @String.Format(GeneralResource.DescriptionAddRemove, @GeneralResource.School)
                </div>
            </h1>
        </div>


    </div>
</div>


<div class="ui main container">
    <div class="ui  segment anim">
        <div class="toolspace">
            @if(super){
            <a href="#" id="Add" class="ui labeled icon primary  button">
                <i class="plus icon"></i>
                @GeneralResource.CreateNew
            </a>
            }

        </div>
        <div class="ui  container">

            <div id="div-record">
                @Html.Partial("_List", Model)
            </div>
        </div>

    </div>
</div>





@{ string New = GeneralResource.New + " " + GeneralResource.School;
    string Update = GeneralResource.Update + " " + GeneralResource.School;
    string Delete = GeneralResource.Delete + " " + GeneralResource.School;
}


<div class="ui add large modal " id="Add-Model" tabindex="-1" role="" aria-labelledby="myModalLabel" aria-hidden="">

    <i class=" close feather icon-x "></i>
    <div class="header">
        @New
    </div>
    <div id="divForAdd" class="divForAdd scrolling content">
    </div>

</div>



<div class="ui edit large modal " id="Edit-Model" tabindex="-1" role="" aria-labelledby="myModalLabel" aria-hidden="">
    <i class=" close feather icon-x "></i>
    <div class="header">
        @Update
    </div>
    <div id="divForUpdate" class="divForUpdate scrolling content">
    </div>
</div>



<div class="ui modal " id="Delete-Model" tabindex="-1" role="" aria-labelledby="myModalLabel" aria-hidden="">
    <i class=" close feather icon-x "></i>
    <div class="header">
        @Delete
    </div>
    <div id="divForDelete" class="divForDelete content">
    </div>

</div>



<script src="~/Scripts/DevelopmentJS/SchoolJS.js"></script>



