@model IEnumerable<Campus.School.Management.Logic.BusinessLayer.ViewModel.DepartmentViewModel>
@using Campus.School.Management.Logic.Resources


<table class="ui selectable  single line Striped celled  compact table" id="myTable">
    <thead>
        <tr class="">
            @*<th>
                @Html.DisplayNameFor(model => model.DepartmentID)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.DepartmentEn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DepartmentAr)
            </th>
            <th>@GeneralResource.Edit</th>
            <th>@GeneralResource.Delete</th>
        </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tr>
                @*<td>
                    @Html.DisplayFor(modelItem => item.DepartmentID)
                </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.DepartmentEn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DepartmentAr)
                </td>
                <td>
                    <a href="#" onclick="Edit(@item.DepartmentID);"> <i class="ui edit icon"></i></a>

                </td>
                <td>
                    <a href="#" onclick="Delete(@item.DepartmentID);"> <i class="ui delete red icon"></i></a>

                </td>
            </tr>
        }

</table>
<script>
    $(document).ready(function () {
        function InitIndex()
        {
            $('#myTable').DataTable();
            var Msg = '@TempData["Msg"]';
            if (Msg == 1)
            {
                toastr.success("@GeneralResource.toastrSave")
            }
            else if (Msg == 2)
            {
                toastr.success("@GeneralResource.toastrEdit")
            }
            else if (Msg == 3)
            {
                toastr.success("@GeneralResource.toastrDelete")
            }
            else if (Msg == 4) {
                toastr.error("@GeneralResource.toastrOperationFaild")
            }

        };
        InitIndex();
    });
</script>