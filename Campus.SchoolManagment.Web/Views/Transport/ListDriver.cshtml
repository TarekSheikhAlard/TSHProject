@model IEnumerable<Campus.School.Management.Logic.BusinessLayer.ViewModel.TransportDriverViewModel>
@using Campus.School.Management.Logic.BusinessLayer;
@using Campus.School.Management.Logic.Resources

<table class="ui selectable  single line Striped celled   table" id="DriverTable">
    <thead>
        <tr>
            <th>
                @GeneralResource.Actions
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DriverNameEn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DriverNameAr)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LicenseNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LicenseExpiryDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmployeeId)
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {

            <tr>
                <td>
                    <a href="#" onclick="EditDriver(@item.Id);"> <i class="feather  icon-edit-1"></i></a>
                    <a href="#" onclick="DeleteDriver(@item.Id);"> <i class="feather red icon-trash"></i></a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DriverNameEn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DriverNameAr)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LicenseNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LicenseExpiryDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmployeeId)
                </td>


            </tr>
        }

    </tbody>


</table>



<script>
    $(document).ready(function () {

        function InitIndex()
        {


            $('#DriverTable').DataTable();
          

            var Msg = '@TempData["Msg"]';
            if (Msg == 1)
            {
                toastr.success("@GeneralResource.toastrSave")
            }
            else if (Msg == 2)
            {
                toastr.success("@GeneralResource.toastrEdit")
            }
            else if (Msg == 3)
            {
                toastr.success("@GeneralResource.toastrDelete")
            }
            else if (Msg == 4) {
                toastr.error("@GeneralResource.toastrOperationFaild")
            }
          
        };
        InitIndex();
    });
</script>

