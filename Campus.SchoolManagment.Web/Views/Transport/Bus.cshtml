
@model IEnumerable<Campus.School.Management.Logic.BusinessLayer.ViewModel.TransportBusesViewModel>
@using Campus.School.Management.Logic.Resources
@{
    ViewBag.Title = "Index"; if (!Request.IsAjaxRequest()) { Layout = "~/Views/Shared/_Layout.cshtml"; }
}


<div class="ui masthead vertical segment primary">
    <div class="ui container">
        <div class="introduction">
            <h1 class="ui header normal ">
                <clr-icon shape="caravan" size="45"></clr-icon>
                @*<i class="feather  icon-map"></i>*@
                <div id="heading" class="content">
                    @GeneralResource.Bus
                </div>
                <div id="Sub" class="sub header">
                    @String.Format(GeneralResource.DescriptionAddRemove, @GeneralResource.Bus)
                </div>
            </h1>
        </div>
    </div>
</div>


<div class="ui main container">

    <div class="ui segment anim">
        <div class="toolspace">

            <a href="#" id="AddBus" class="ui labeled icon primary  button">
                <i class="plus icon"></i>
                @GeneralResource.CreateNew
            </a>

            <div class="ui  buttons">
                <div class="ui download icon button">  <i class="download  icon"></i> @GeneralResource.Download</div>
                <div class="ui floating dropdown icon button">
                    <i class="dropdown icon"></i>
                    <div class="menu">
                        <a href="#" id="DownloadExcelBus" class="item">
                            <i class="file excel outline icon"></i>
                            @GeneralResource.Excel
                        </a>
                        <a href="#" id="DownloadPDFBus" class="item">
                            <i class="file pdf outline icon"></i>
                            @GeneralResource.PDF
                        </a>


                    </div>
                </div>
            </div>
        </div>
        <div class="ui container">
            <div id="div-record">
                @Html.Partial("ListBus", Model)
            </div>
        </div>

    </div>
</div>


@{ string New = GeneralResource.New + " " + GeneralResource.Bus;
    string Update = GeneralResource.Update + " " + GeneralResource.Bus;
    string Delete = GeneralResource.Delete + " " + GeneralResource.Bus;
}

<div class="ui add large  modal " id="Add-Model">
    <i class=" close feather icon-x "></i>
    <div class="header">
        @New
    </div>
    <div id="divForAdd" class="divForAdd scrolling content">
    </div>
</div> <div class="ui edit large modal " id="Edit-Model">
    <i class=" close feather icon-x "></i>
    <div class="header">
        @Update
    </div>
    <div id="divForUpdate" class="divForUpdate scrolling content">
    </div>
</div>
<div class="ui modal " id="Delete-Model">
    <i class=" close feather icon-x "></i>
    <div class="header">
        @Delete
    </div>
    <div id="divForDelete" class="divForDelete content">
    </div>
</div>

<script src="~/Scripts/DevelopmentJS/Transport.Bus.js"></script>

<script src="~/Scripts/DevelopmentJS/Transport.Map.js"></script>
