
@model IEnumerable<Campus.School.Management.Logic.BusinessLayer.ViewModel.BusTripViewModel>
@using Campus.School.Management.Logic.Resources

@{
    ViewBag.Title = "Index"; if (!Request.IsAjaxRequest()){Layout = "~/Views/Shared/_Layout.cshtml";}
}


<div class="row">
    <div class="col-md-12">
        <div class="ui raised blue segment anim">
            
                <div class="ui large dividing header">
                    @GeneralResource.BusTrip
                </div>

           
           <div class="ui container">
                <div id="div-record">
                    <table class="ui selectable  single line Striped celled  compact table" id="myTable">
                        <thead>
                            <tr class="">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.BusNo)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.BusStation)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Notes)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.PickUpTime)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.DropTime)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.TripType)
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                             {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.BusNo)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.BusStation)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Notes)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PickUpTime)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DropTime)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TripType)
                                    </td>

                                </tr>
                             }
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        function InitIndex() {
            $('#myTable').DataTable();
        };
        InitIndex();
    });
</script>



