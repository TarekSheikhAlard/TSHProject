@model IEnumerable<Campus.School.Management.Logic.BusinessLayer.ViewModel.SemsterViewModel>
@using Campus.School.Management.Logic.Resources

<table class="ui selectable  single line Striped celled  compact table" id="myTable">
    <thead>
        <tr class="">
            <th>


                @GeneralResource.Actions
            </th>
          
            <th>
                @Html.DisplayNameFor(model => model.SemNameE)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SemNameA)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Year)
            </th>

            @*<th>
                @Html.DisplayNameFor(model => model.Grade)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.SemID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SemStDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SemEdDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuartersCount)
            </th>
            @*<th>@GeneralResource.Edit</th>*@
            @*<th>@GeneralResource.Delete</th>*@
        </tr>
    </thead>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            <a href="#" onclick="Edit(@item.SID);"> <i class="feather icon-edit-1"></i></a>

        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SemNameE)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SemNameA)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Year)
        </td>

        @*<td>
            @Html.DisplayFor(modelItem => item.Grade)
        </td>*@

        <td>
            @Html.DisplayFor(modelItem => item.SemID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SemStDate)

        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SemEdDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.QuartersCount)
        </td>

        @*<td>
            <a href="#" onclick="Delete(@item.SID);"> <i class="ui delete red icon"></i></a>

        </td>*@
    </tr>
    }

</table>

<script>
    $(document).ready(function () {
        function InitIndex()
        {
            $('#myTable').DataTable();
            var Msg = '@TempData["Msg"]';
            if (Msg == 1)
            {
                toastr.success("@GeneralResource.toastrSave")
            }
            else if (Msg == 2)
            {
                toastr.success("@GeneralResource.toastrEdit")
            }
            else if (Msg == 3)
            {
                toastr.success("@GeneralResource.toastrDelete")
            }
            else if (Msg == 4) {
                toastr.error("@GeneralResource.toastrOperationFaild")
            }

        };
        InitIndex();
    });
</script>