            @Html.ValidationMessageFor(model => model.PlaceNameEn, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="field">
        @Html.LabelFor(model => model.PlaceNameAr, htmlAttributes: new { @class = "" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.PlaceNameAr, new { htmlAttributes = new { @class = "" } })
            @Html.ValidationMessageFor(model => model.PlaceNameAr, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="actions">
