
@model IEnumerable<Campus.School.Management.Logic.BusinessLayer.ViewModel.AdmInitialStudRegistrationViewModel>
@using Campus.School.Management.Logic.Resources
@{
    ViewBag.Title = "Index"; if (!Request.IsAjaxRequest()) { Layout = "~/Views/Shared/_Layout.cshtml"; }
}

@*<script src="~/Content/Scripts/jquery-1.10.2.min.js"></script>*@
@*<script src="~/Content/Scripts/jquery.unobtrusive-ajax.min.js"></script>*@

<div class="ui masthead vertical segment primary">
    <div class="ui container">
        <div class="introduction">
            <h1 class="ui header normal ">
                <clr-icon shape="child-arrow" size="45"></clr-icon>
                @*<i class="feather  icon-map"></i>*@
                <div id="heading" class="content">
                    @GeneralResource.InitialRegistration
                </div>
                <div id="Sub" class="sub header">
                   
                </div>
            </h1>
        </div>
    </div>
</div>


<div class="ui main container">

    <div class="ui segment anim">
        <div class="toolspace">

            <div class="ui form">
                <div class="inline fields">

                    <div class="field">
                        <b> @GeneralResource.Grade</b>  @Html.DropDownList("GradeID", ViewBag.GradeID as SelectList, GeneralResource.Select, htmlAttributes: new { @class = "ui search selection dropdown",@onchange = "GetInitStuds(this.value);" })
                    </div>
                </div>
            </div>

            <a href="#" id="Add" class="ui labeled icon primary  button">
                <i class="plus icon"></i>
                @GeneralResource.CreateNew
            </a>

        </div>
        <div class="ui container">
          
                <div class="ui inverted initStudent dimmer">
                    <div class="ui text loader">@GeneralResource.Loading</div>
                </div>
             
         
            <div id="div-record" class="ui placeholder segment">
              @* @Html.Partial("_List", Model)*@
            </div>
        </div>

    </div>
</div>


@{ string New = GeneralResource.New;
    string Update = GeneralResource.Update;
    string Delete = GeneralResource.Delete;
}



<div class="ui add  modal " id="Add-Model" >
    <i class=" close feather icon-x "></i>
    <div class="header">
        @GeneralResource.New
    </div>
    <div id="divForAdd" class="divForAdd scrolling content">
    </div>
</div>
<div class="ui edit modal " id="Edit-Model" >
    <i class=" close feather icon-x "></i>
    <div class="header">
        @GeneralResource.Update
    </div>
    <div id="divForUpdate" class="divForUpdate scrolling content">
    </div>
</div>
<div class="ui delete modal " id="Delete-Model" >
    <i class=" close feather icon-x "></i>
    <div class="header">
        @GeneralResource.Delete
    </div>
    <div id="divForDelete" class="divForDelete content">
    </div>
</div>
<script src="~/Scripts/DevelopmentJS/InitialRegistration.js"></script>